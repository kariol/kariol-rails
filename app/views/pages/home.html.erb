<div class="banner">
  <div class="banner-container">
    <div class="banner-top">
      <div class="container">
        <div class="banner-top-content">
          <%= link_to root_path do %>
            <%= image_tag 'logo.png' %>
          <% end %>
          <div>
            <%= image_tag 'favicon.png' %>
            <%= link_to 'Entreprise, embarquez ici', enterprise_path, class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    </div>
    <div class="banner-content" style="background-image: url('<%= image_path 'logo.png' %>');">
      <div class="banner-headline">
        <div class="container">
          <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-4">
              <h1>Laissez-vous transporter</h1>
              <h4>Kariol est un service de navettes collectives, qui vous transporte de votre domicile à votre travail rapidement et confortablement</h4>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-6">
            <div class="banner-form">
              <p>Précisez-nous votre trajet, Kariol arrive !</p>
              <div class="new-commute-request">
                <%= render 'commute_requests/form' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

