<div class="banner">
  <div class="banner-top">
    <div class="container">
      <div class="banner-top-content">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png' %>
        <% end %>
        <div class="hidden-xs">
          <%= image_tag 'blue_van_icon.png' %>
          <%= link_to 'Entreprise ? Embarquez ici', enterprise_path, class: 'btn btn-info' %>
        </div>
        <div class="visible-xs">
          <%= link_to 'Entreprise', enterprise_path, class: 'btn btn-info' %>
        </div>
      </div>
    </div>
  </div>
  <div class="banner-large-container hidden-xs" style="background-image: url('<%= image_path 'banner-alternate.png' %>');">
    <div class="banner-content" style="background-image: url('<%= image_path 'banner.png' %>');">
      <div class="banner-spacer hidden-sm"></div>

      <%= render 'home_banner_content' %>

      <div class="banner-spacer visible-sm"></div>
    </div>
  </div>
  <div class="banner-content hidden-sm hidden-md hidden-lg">
    <%= render 'home_banner_content' %>
  </div>
</div>

<div class="section-title">
  <div class="container">
    <h2>Valorisez votre trajet domicile-travail</h2>
  </div>
</div>

