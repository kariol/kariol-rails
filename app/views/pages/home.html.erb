<div class="banner">
  <div class="banner-top">
    <div class="container">
      <div class="banner-top-content">
        <div class="banner-top-brand">
          <%= link_to root_path do %>
            <%= image_tag 'logo.png' %>
          <% end %>
        </div>
        <div class="banner-top-cta">
          <div class="hidden-xs">
            <%= image_tag 'van_marine.png' %>
            <%= link_to 'Entreprise ? Embarquez ici', enterprise_path, class: 'btn btn-info' %>
          </div>
          <div class="visible-xs">
            <%= link_to 'Entreprise', enterprise_path, class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="banner-large-container background-hidden-xs" style="background-image: url('<%= image_path 'banner-alternate.png' %>');">
    <div class="banner-content background-hidden-xs" style="background-image: url('<%= image_path 'banner.png' %>');">
      <div class="banner-spacer hidden-xs hidden-sm"></div>

      <div class="banner-headline">
        <div class="container">
          <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-2 col-md-8 col-md-offset-4">
              <h1>Laissez-vous transporter</h1>
              <h4>BackSit est un service de navettes collectives, qui vous transporte de votre domicile à votre travail rapidement et confortablement</h4>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-sm-9 col-sm-offset-3 col-md-7 col-md-offset-5">
            <div class="banner-form">
              <p>Précisez-nous votre trajet, BackSit arrive !</p>
              <div class="new-commute-request">
                <%= render 'commute_requests/form' %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="banner-spacer visible-sm"></div>
    </div>
  </div>
</div>

