<%= simple_form_for @commute_request do |f| %>
  <%= f.simple_fields_for :origin do |o| %>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1"><%= icon 'home' %></span>
      <%= o.input :complete, label: false, placeholder: 'Ma maison' %>
    </div>
  <% end %>

  <%= f.simple_fields_for :destination do |d| %>
    <%= d.input :complete, label: false, placeholder: '🏢 Mon travail' %>
  <% end %>

  <div class="row">
    <div class="col-xs-3">
      <%= f.input :arrival_time, label: false, prompt: '🕗 Arrivée',
                  collection: ['07h00', '07h30', '08h00', '08h30', '09h00', '09h30'] %>
    </div>

    <div class="col-xs-9">
      <%= f.input :email, label: false, placeholder: '📧 roger@kariol.co' %>
    </div>
  </div>

  <%= f.submit "J'embarque 🚌", class: 'btn btn-primary' %>
<% end %>
