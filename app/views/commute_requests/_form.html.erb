      <span class="input-group-addon"><%= icon 'home' %></span>
      <%= o.input_field :complete, placeholder: 'Ma maison', class: 'form-control' %>
    <% end %>
  <% end %>


  <%= f.simple_fields_for :destination do |d| %>
    <%= d.input :complete, label: false, wrapper: :vertical_input_group do %>
      <span class="input-group-addon"><%= icon 'building' %></span>
      <%= d.input_field :complete, placeholder: 'Mon travail', class: 'form-control' %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-xs-3">
      <%= f.input :arrival_time, label: false, wrapper: :vertical_input_group do %>
